<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:layout="sap.ui.layout" >

	<Dialog id="dialog"
	 	title="Use Custom Header" >
		<customHeader>
			<Bar>
				<contentMiddle>
					<Title
						text="{i18n>Title}" />
				</contentMiddle>
			</Bar>
		</customHeader>
		<subHeader>
			<Bar>
				<contentMiddle>
					<FlexBox
						alignItems="Start"
						justifyContent="Center">
						<items>
							<Input id="addStoreInput"
								type="Number"
								placeholder="{i18n>AddStorePlaceholder}"
								submit="onAdd" />
							<Button
								tooltip="{i18n>AddStoreBtnTooltip}"
								icon="sap-icon://add"
								press="onAdd" />
						</items>
					</FlexBox>
				</contentMiddle>
				<contentRight>
				</contentRight>
			</Bar>
		</subHeader>
		<content>
			<layout:Grid
				width="{= ${device>/system/phone} ? '18rem' : '21rem'}" >
				<layout:content>
					<List id="list"
						noDataText="{i18n>NoStoresApplied}"
						mode="Delete"
						delete="onDelete"
						items="{ path: '/aStores/' }">
						<layoutData>
							<layout:GridData span="L12 M12 S12" />
						</layoutData>
						<items>
							<CustomListItem
	 							class="sapUiNoMarginBegin sapUiNoMarginTop"
								type="{= ${device>/system/phone} ? 'Active' : 'Inactive'}"
								press="onSelectionChange" >
								<content>
									<FlexBox
										class="sapUiTinyMarginTop"
										justifyContent="Start"
										alignItems="Center"
										wrap="Wrap" >
										<items>
											<Label
												class="sapUiTinyMarginEnd"
												design="Bold"
												text="{i18n>LabelStoreId} {StoreId}" />
											<Text
												text="{	
													path: 'Address/ShoppingCenterID',
													formatter: '.capFirstLetter'
												}" />
										</items>
									</FlexBox>
									<FlexBox
										class="sapUiTinyMarginTopBottom"
										justifyContent="Start"
										alignItems="Center"
										wrap="Wrap" >
										<items>
											<Text
												text="{
													path: 'Address/StreetAddress',
													formatter: '.capFirstLetter'
												}, {
													path: 'Address/City',
													formatter: '.capFirstLetter'
												}, {Address/State}  {Address/ZipCode}" />
										</items>
									</FlexBox>
								</content>
							</CustomListItem>
						</items>
					</List>
				</layout:content>
			</layout:Grid>
		</content>
		<buttons>
			<Button
				type="Accept"
				enabled="{/bHaveStores}"
				text="{i18n>BtnApply}"
				press="onApply" />
			<Button
				type="Reject"
				text="{i18n>BtnCancel}"
				press="onCancel" />
		</buttons>
	</Dialog>

</core:FragmentDefinition>